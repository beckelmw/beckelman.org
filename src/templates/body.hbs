{{#expect meta, html}}
<main class="container mx-auto p-4 md:p-0">
  <div class="prose prose-slate max-w-none lg:prose-lg">
    {{#if meta?.title}}
      <div class="relative mb-12">
        {{#if meta?.banner}}
          <div class="absolute inset-0 not-prose">
            <img
              class="w-full h-full object-cover"
              src="{{meta.banner}}"
              alt=""
            />
          </div>
          <div
            class="relative mx-auto px-4 pt-8 pb-40 sm:px-6 lg:px-8"
          >
            <h1
              class="text-4xl font-extrabold tracking-tight text-white"
            >{{meta.title}}</h1>
          </div>
        {{#else}}
          <div class="relative mx-auto">
            <h1
              class="text-4xl font-extrabold tracking-tight text-black"
            >{{meta.title}}</h1>
          </div>
        {{/if}}
     
      </div>
    {{/if}}
    {{#if meta?.status}}
      <div
        class="inline-flex items-center justify-center px-2 py-1 mr-2 bg-blue-500 rounded-full"
      >
        <a
          class="uppercase no-underline text-xs font-bold leading-none text-white"
          href="/code/digital-gardening"
        >{{meta.status}}</a>
      </div>
    {{/if}}
    {{{html}}}
  </div>
</main>